{% set route = app.request.attributes.get('_route') %}
<li class="header">MAIN NAVIGATION</li>
<li>
    <a href="#">
        <i class="fa fa-dashboard"></i> <span>Dashboard</span>
    </a>
</li>
<li class="treeview{% if route in ['braindigit_user_list','braindigit_user_form','braindigit_group_list','braindigit_group_form'] %} active{% endif %}">
    <a href="#">
        <i class="fa fa-users"></i>
        <span>Users and Groups</span>
        <i class="fa fa-angle-left pull-right"></i>
    </a>
    <ul class="treeview-menu">
        <li class="{% if route in ['braindigit_user_list','braindigit_user_form'] %} active{% endif %}">
            <a href="#">
                <i class="fa fa-user"></i>
                <span>Users</span>
                <i class="fa fa-angle-left pull-right"></i>
            </a>
            <ul class="treeview-menu">
                <li{% if route in ['braindigit_user_list'] %} class="active"{% endif %}><a href="{{ path('braindigit_user_list') }}"><i class="fa fa-list"></i> List</a></li>
                <li{% if route in ['braindigit_user_form'] %} class="active"{% endif %}><a href="{{ path('braindigit_user_form') }}"><i class="fa fa-plus"></i> Add</a></li>
            </ul>
        </li>

        <li class="{% if route in ['braindigit_group_list','braindigit_group_form'] %} active{% endif %}">
            <a href="#">
                <i class="fa fa-group"></i>
                <span>Groups</span>
                <i class="fa fa-angle-left pull-right"></i>
            </a>
            <ul class="treeview-menu">
                <li{% if route in ['braindigit_group_list'] %} class="active"{% endif %}><a href="{{ path('braindigit_group_list') }}"><i class="fa fa-list"></i> List</a></li>
                <li{% if route in ['braindigit_group_form'] %} class="active"{% endif %}><a href="{{ path('braindigit_group_form') }}"><i class="fa fa-plus"></i> Add</a></li>
            </ul>
        </li>
    </ul>
</li>